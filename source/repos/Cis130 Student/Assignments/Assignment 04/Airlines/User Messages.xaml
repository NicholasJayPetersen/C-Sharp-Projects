<Window x:Name="wndUserMessages" x:Class="Airlines.User_Messages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines"
        mc:Ignorable="d"
        Title="User Messages" Height="463" Width="986" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtMessages" HorizontalAlignment="Center" Height="382" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="966" VerticalScrollBarVisibility="Visible" IsReadOnly="True" IsTabStop="False" FontSize="16"/>
        <Button x:Name="btnClose" Content="_Close" HorizontalAlignment="Center" Height="27" Margin="0,397,0,0" VerticalAlignment="Top" Width="62"/>

    </Grid>
</Window>
